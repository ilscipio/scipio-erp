                            </widgets>
                        </section>
                    </decorator-section>
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="CONTENTMGR" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <container>
                                    <include-menu name="ContentSubButtonBar" location="component://content/widget/content/ContentMenus.xml"/>
                                </container>
                                <section>
                                    <condition>
