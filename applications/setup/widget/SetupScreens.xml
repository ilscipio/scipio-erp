    <!-- SCIPIO: based on InitialSetup -->
    <screen name="SetupOrganization">
        <section>
            <actions>
                <set field="setupStep" value="organization"/>
                <script location="component://setup/webapp/setup/WEB-INF/actions/SetupWizardCommonActions.groovy"/>

                <!-- why?: <set field="previousParams" from-field="_PREVIOUS_PARAMS_" from-scope="user"/>-->
                
                <property-to-field field="defaultCountryGeoId" resource="general" property="country.geo.id.default" default="USA"/>

                <entity-condition entity-name="PartyRole" list="partyRoles">
                    <condition-expr field-name="roleTypeId" operator="equals" value="INTERNAL_ORGANIZATIO"/>
                </entity-condition>
                <!-- user must select one to edit first, otherwise can't switch to "create new"
                <if>
                    <condition>
                        <and>
                            <if-empty field="partyId"/>
                            <not><if-empty field="partyRoles"/></not>
                        </and>
                    </condition>
                    <then>
                        <!- - select the first party, sometimes this works out - ->
                        <set field="partyId" from-field="partyRoles[0].partyId"/>
                        <set field="parameters.partyId" from-field="partyId"/>
                        <entity-one entity-name="Party" value-field="party">
                            <field-map field-name="partyId" from-field="partyId"/>
                        </entity-one>
                    </then>
                </if>
                -->

                <set field="titleProperty" value="${groovy: context.party != null ? 'SetupEditOrganizationInformation' : 'SetupCreateNewOrganization'}" />
                <set field="target" value="${groovy: context.party != null ? 'setupUpdateOrganization' : 'setupCreateOrganization'}" />
            </actions>
            <widgets>
                <decorator-screen name="CommonSetupWizardDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <platform-specific>
                            <html>
                                <html-template><![CDATA[
                                  <@section>
                                      <#-- NOTE: sending to setupWizard instead of setupOrganization so it automatically goes to the next unfinished step -->
                                      <form method="get" action="<@ofbizUrl>setupWizard</@ofbizUrl>" id="setupOrg-selectOrg-form">
                                        <@field type="select" name="partyId" label=uiLabelMap.SetupOrganization onChange="jQuery('#setupOrg-selectOrg-form').submit(); void(0);">
                                            <option value="">[${uiLabelMap.SetupCreateNewOrganization}]</option>
                                            <option value="" disabled="disabled"></option>
                                            <#if partyRoles?has_content>
                                              <#list partyRoles as partyRole>
                                                <#assign curPartyGroup = delegator.findOne("PartyGroup", {"partyId":partyRole.partyId}, true)>
                                                <#assign selected = (rawString(partyRole.partyId) == rawString(partyId!))>
                                                <option value="${partyRole.partyId}"<#if selected> selected="selected"</#if>>${curPartyGroup.groupName} [${partyRole.partyId}]</option>
                                              </#list>
                                            </#if>
                                        </@field>
                                      </form>
                                  </@section>
                                ]]></html-template>
                            </html>
                        </platform-specific>
                        <section>
                            <condition>
                                <if-empty field="party"/>
                            </condition>
                            <widgets>
                                <section>
                                    <actions>
                                        <!-- fields for setDependentDropdownValuesJs.ftl, it's a try on generalization, if you need an example with more than one dropdown in a form have a look at EditProductPriceRules screen -->
                                        <set field="dependentForm" value="NewOrganization"/>
                                        <set field="paramKey" value="countryGeoId"/>                                        
                                        <set field="mainId" value="USER_COUNTRY"/>
                                        <set field="dependentId" value="USER_STATE"/>
                                        <set field="requestName" value="getAssociatedStateList"/>
                                        <set field="responseName" value="stateList"/>
                                        <set field="dependentKeyName" value="geoId"/>
                                        <set field="descName" value="geoName"/>
                                        <set field="selectedDependentOption" value="_none_"/>
                                    </actions>
                                    <widgets>
                                        <platform-specific><html><html-template location="component://common/webcommon/includes/setDependentDropdownValuesJs.ftl"/></html></platform-specific>
                                        <screenlet>
                                            <include-form name="EditOrganization" location="component://setup/widget/SetupForms.xml"/>
                                        </screenlet>
                                    </widgets>
                                </section>
                            </widgets>
                            <fail-widgets>
                                <section>
                                    <actions>
                                    </actions>
                                    <widgets>
                                        <include-screen name="viewprofile" location="component://setup/widget/ProfileScreens.xml"/>
                                    </widgets>
                                </section>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="SetupUser">
        <section>
            <actions>
                <set field="setupStep" value="user"/>
                <script location="component://setup/webapp/setup/WEB-INF/actions/SetupWizardCommonActions.groovy"/>
                
                <set field="titleProperty" value="PartyCreateNewCustomer"/>
                <!-- FIXME: everything here squashes the org party ID
                <set field="partyId" value="CUST"/>
                <entity-condition entity-name="PartyRole" list="parties">
                    <condition-expr field-name="roleTypeId" operator="equals" value="CUSTOMER"/>
                </entity-condition>
                <set field="partyId" from-field="parties[0].partyId"/>
                 -->
                <set field="customerPartyId" from-field="customerRel.partyIdFrom"/>
                <!-- why? <set field="previousParams" from-field="_PREVIOUS_PARAMS_" from-scope="user"/>-->
                
                <!-- FIXME: context.parties check is bad -->
                <set field="titleProperty" value="${groovy: context.parties != null ? 'PartyChangeParty' : 'PartyNewUser'}" />
                <set field="target" value="${groovy: context.parties ? 'setupUpdateUser' : 'setupCreateUser'}" />
            </actions>
            <widgets>
                <decorator-screen name="CommonSetupWizardDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="PARTYMGR" action="_CREATE"/>
                            </condition>
                            <widgets>
                                <section>
                                    <condition>
                                        <if-empty field="parties"/>
                                    </condition>
                                    <actions>
                                        <!-- fields for setDependentDropdownValuesJs.ftl -->
                                        <set field="dependentForm" value="NewCustomer"/>
                                        <!-- SCIPIO: new field required as workaround for Ofbiz issue with form names -->
                                        <set field="depFormFieldPrefix" value="NewUser_"/>
                                        <set field="paramKey" value="countryGeoId"/>                                        
                                        <set field="mainId" value="USER_COUNTRY"/>
                                        <set field="dependentId" value="USER_STATE"/>
                                        <set field="requestName" value="getAssociatedStateList"/>
                                        <set field="responseName" value="stateList"/>
                                        <set field="dependentKeyName" value="geoId"/>
                                        <set field="descName" value="geoName"/>
                                        <set field="selectedDependentOption" value="_none_"/>
                                    </actions>
                                    <widgets>
                                        <platform-specific><html><html-template location="component://common/webcommon/includes/setDependentDropdownValuesJs.ftl"/></html></platform-specific>
                                        <screenlet>
                                            <include-form name="EditUser" location="component://setup/widget/SetupForms.xml"/>
                                        </screenlet>
                                    </widgets>
                                    <fail-widgets>
                                        <section>
                                            <actions>
                                            </actions>
                                            <widgets>
                                                <include-screen name="viewprofile" location="component://setup/widget/ProfileScreens.xml"/>
                                            </widgets>
                                        </section>
                                    </fail-widgets>
                                </section>
                            </widgets>
                            <fail-widgets>
                                <label style="common-msg-error-perm">${uiLabelMap.PartyMgrCreatePermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
