        </field>
        <field name="requireTaxIdForExemption">
            <drop-down allow-empty="true">
                <option description="${uiLabelMap.CommonNo}" key="N"/>
                <option description="${uiLabelMap.CommonYes}" key="Y"/>
            </drop-down>
        </field>
        <field name="includeTaxInPrice" position="2">
            <drop-down allow-empty="true">
                <option description="${uiLabelMap.CommonNo}" key="N"/>
                <option description="${uiLabelMap.CommonYes}" key="Y"/>
