<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="activeMainMenuItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
                <set field="activeSubMenuItem" from-field="activeMainMenuItem"/>
                <set field="activeSubMenu" value="TOP"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonDemoSuiteAppDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <label>${uiLabelMap.CommonWelcome}</label>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>