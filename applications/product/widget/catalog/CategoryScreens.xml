    <screen name="CreateProductInCategoryCheckExisting">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleCreateProductCategoryCheckExisting"/>
                <set field="labelTitleProperty" value="ProductCreateProductInCategory"/>

