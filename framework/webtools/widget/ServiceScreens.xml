    <screen name="globalJobStats">
        <section>
            <actions>
                <script lang="groovy"><![CDATA[
                    context.jobList = org.ofbiz.service.job.JobPoller.getInstance().getGlobalServiceStatsMapList(context.jobType ?: parameters.jobType);
