    <screen name="main">
        <section>
            <actions>
                <set field="activeMainMenuItem" from-field="activeMainMenuItem" default-value="main"/>
                <set field="activeSubMenuItem" from-field="activeMainMenuItem"/>
                <set field="titleProperty" value="ContentMain"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonContentAppDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
